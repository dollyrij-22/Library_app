<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@drawable/bckgrnd">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="WELCOME TO MMMUT "
        android:id="@+id/first_text"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"
        android:layout_weight="0.10"
        android:textSize="25dp"
        android:textIsSelectable="false"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp" />

    <Button
        android:layout_width="294dp"
        android:layout_height="60dp"
        android:text="STUDENT LOGIN"
        android:id="@+id/std_button"
        android:layout_weight="0.10"
        android:height="30dp"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/lib_button"
        android:layout_alignStart="@+id/lib_button" />

    <Button
        android:layout_width="294dp"
        android:layout_height="60dp"
        android:text="FACULTY LOGIN"
        android:id="@+id/fac_button"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/std_button"
        android:layout_alignLeft="@+id/std_button"
        android:layout_alignStart="@+id/std_button"
        android:layout_marginBottom="40dp" />

    <Button
        android:layout_width="294dp"
        android:layout_height="60dp"
        android:text="LIBRARIAN LOGIN"
        android:id="@+id/lib_button"
        android:layout_alignWithParentIfMissing="false"
        android:layout_below="@+id/fac_button"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="e-Library"
        android:id="@+id/lib_txt"
        android:padding="10dp"
        android:textAlignment="center"
        android:textSize="45dp"
        android:layout_below="@+id/first_text"
        android:layout_centerHorizontal="true" />
</RelativeLayout>